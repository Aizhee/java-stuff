package act15;

import javax.swing.BorderFactory;
import javax.swing.JMenu;
import javax.swing.JMenuItem;

public class Designer {
	// overriding design method
	
	public void design(JMenu menu) {
		menu.setBackground(Colors.COLOR_PRIMARY);
		menu.setForeground(Colors.COLOR_PRIMARY);
		menu.setBorder(BorderFactory.createLineBorder(Colors.COLOR_PRIMARY, 1));
	}
	
	public void design(JMenuItem menuItem) {
		menuItem.setBackground(Colors.COLOR_PRIMARY);
		menuItem.setForeground(Colors.COLOR_PRIMARY);
		menuItem.setBorder(BorderFactory.createLineBorder(Colors.COLOR_PRIMARY, 1));
    }

}
